function showStation() {
  const card = document.getElementById("card");
  card.innerHTML = `
    <h2>${stationName} Station</h2>
    <p>Enter the correct code to complete this station.</p>
    <p><i>Just key "123".</i></p>

    <input type="text" id="answer" placeholder="Enter code" />
    <br />
    <button onclick="submitAnswer()">Submit</button>

    <div id="message"></div>
  `;
}

